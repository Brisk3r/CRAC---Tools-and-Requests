    <script>
        function showResult(elementId, message) {
            const resultElement = document.getElementById(elementId);
            resultElement.innerHTML = message;
            resultElement.style.display = 'block';
            resultElement.classList.add('animate-fade-in');
            setTimeout(() => resultElement.classList.remove('animate-fade-in'), 500);
        }

        function calculateBatherLoad() {
            const wadingArea = parseFloat(document.getElementById('wadingArea').value) || 0;
            const shallowArea = parseFloat(document.getElementById('shallowArea').value) || 0;
            const deepArea = parseFloat(document.getElementById('deepArea').value) || 0;
            const spaArea = parseFloat(document.getElementById('spaArea').value) || 0;

            const wadingBathers = Math.floor(wadingArea / 2.2);
            const shallowBathers = Math.floor(shallowArea / 2.7);
            const deepBathers = Math.floor(deepArea / 4.0);
            const spaBathers = Math.floor(spaArea / 2.0);

            const totalBathers = wadingBathers + shallowBathers + deepBathers + spaBathers;
            
            showResult('batherResult', 
                `<strong>Bather Load Breakdown:</strong><br>
                Wading Area: ${wadingBathers} bathers<br>
                Shallow Area: ${shallowBathers} bathers<br>
                Deep Area: ${deepBathers} bathers<br>
                Spa Area: ${spaBathers} bathers<br>
                <br>
                <strong>Total Maximum Bather Load: ${totalBathers}</strong>`
            );
        }

        function calculateOccupantLoad() {
            const deckArea = parseFloat(document.getElementById('deckArea').value) || 0;
            const occupantLoad = Math.floor(deckArea / 0.5);

            showResult('occupantResult', `<strong>Total Land-Based Occupant Load: ${occupantLoad}</strong>`);
        }

        function calculateCommunityRoomOccupancy() {
            const roomArea = parseFloat(document.getElementById('roomArea').value) || 0;
            // Using a standard NCC ratio for assembly areas: 1 person per 0.75m¬≤
            const roomOccupancy = Math.floor(roomArea / 0.75);
            
            showResult('communityRoomResult', `<strong>Total Community Room Occupancy: ${roomOccupancy}</strong>`);
        }
    </script>
