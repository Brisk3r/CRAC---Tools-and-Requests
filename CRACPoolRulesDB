                keywords: "protect, child, vulnerable, abuse, report"
            }
        ];

        // App Logic
        const searchInput = document.getElementById('searchInput');
        const resultsGrid = document.getElementById('resultsGrid');
        const noResults = document.getElementById('noResults');
        let currentCategory = 'all';

        function renderCards(rules) {
            resultsGrid.innerHTML = '';
            
            if (rules.length === 0) {
                noResults.classList.remove('hidden');
            } else {
                noResults.classList.add('hidden');
                rules.forEach(rule => {
                    const card = document.createElement('div');
                    card.className = 'glass-panel rounded-xl p-5 card-hover border-l-4 ' + 
                                   (rule.category === 'Safety' ? 'border-red-500' : 
                                    rule.category === 'Supervision' ? 'border-orange-400' : 
                                    rule.category === 'Hygiene' ? 'border-cyan-500' : 
                                    'border-blue-500');
                    
                    card.innerHTML = `
                        <div class="flex items-start justify-between mb-2">
                            <div class="flex items-center gap-2">
                                <span class="text-xs font-bold uppercase tracking-wider text-slate-400 bg-slate-100 px-2 py-0.5 rounded">${rule.category}</span>
                            </div>
                            <i class="fa-solid ${rule.icon} ${rule.color} text-xl"></i>
                        </div>
                        <h3 class="text-lg font-bold text-slate-800 mb-2">${rule.title}</h3>
                        <p class="text-slate-600 text-sm leading-relaxed">${rule.content}</p>
                    `;
                    resultsGrid.appendChild(card);
                });
            }
        }

        function filterRules() {
            const query = searchInput.value.toLowerCase();
            
            const filtered = poolRules.filter(rule => {
                const matchesSearch = rule.title.toLowerCase().includes(query) || 
                                      rule.content.toLowerCase().includes(query) || 
                                      rule.keywords.includes(query);
                const matchesCategory = currentCategory === 'all' || rule.category === currentCategory;
                
                return matchesSearch && matchesCategory;
            });

            renderCards(filtered);
        }

        function filterCategory(category) {
            currentCategory = category;
            
            // Update UI buttons
            const buttons = document.querySelectorAll('.filter-btn');
            buttons.forEach(btn => {
                if (btn.innerText.includes(category === 'all' ? 'All Rules' : category)) {
                    btn.classList.add('bg-blue-900', 'text-white');
                    btn.classList.remove('bg-slate-100', 'text-slate-600');
                } else {
                    btn.classList.remove('bg-blue-900', 'text-white');
                    btn.classList.add('bg-slate-100', 'text-slate-600');
                }
            });

            filterRules();
        }

        // Event Listeners
        searchInput.addEventListener('input', filterRules);

        // Initial Render
        renderCards(poolRules);

    </script>
</body>
</html>
